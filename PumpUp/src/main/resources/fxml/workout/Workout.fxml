                                        <TextField fx:id="durationField" prefHeight="30.0" prefWidth="60.0" />
                                    </children>
                                </HBox>
                                <HBox>
                                    <children>
                                        <Label text="Wiederholungen" HBox.hgrow="ALWAYS" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <TextField fx:id="repetionField" prefHeight="30.0" prefWidth="60.0" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
