<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="userEditPane" styleClass="mainRoot"
            stylesheets="@../../css/mainStyle.css" xmlns="http://javafx.com/javafx/8"
            fx:controller="sepm.ss15.grp16.gui.controller.user.UserEditController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="TOP_CENTER">
                    <children>
                        <Label alignment="TOP_LEFT" text="Persönliche Daten">
                            <font>
                                <Font name="System Bold" size="19.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <Separator/>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Alter:"/>
                        <TextField fx:id="ageTextField"/>
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Größe (in cm):"/>
                        <TextField fx:id="heightTextField" prefHeight="26.0" prefWidth="200.0"/>
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Gewicht (in kg):"/>
                        <TextField fx:id="weightTextField"/>
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Körperfettanteil (in %):"/>
                        <TextField fx:id="bodyfatTextField"/>
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="E-Mail-Adresse:"/>
                        <TextField fx:id="emailTextField"/>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                onAction="#saveChangesButtonClicked" styleClass="backBtn"
                                stylesheets="@../../css/gen_workout_resultStyle.css" text="Änderungen speichern">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
