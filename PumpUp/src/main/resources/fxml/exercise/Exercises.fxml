<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="700.0" prefWidth="1300.0"
            stylesheets="@../../css/exerciseStyle.css" xmlns="http://javafx.com/javafx/8"
            fx:controller="sepm.ss15.grp16.gui.controller.exercises.ExercisesController">
    <center>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <children>
                        <TextField fx:id="tf_search" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308" promptText="Übungsname" styleClass="searchField">
                            <VBox.margin>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </VBox.margin>
                        </TextField>
                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                            <children>
                                <TableView fx:id="uebungsTableView" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="uebungColumn" editable="false"
                                                     maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="200.0"
                                                     resizable="false" text="Übung"/>
                                    </columns>
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                </TableView>
                            </children>
                        </VBox>
                        <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308"
                              maxWidth="1.7976931348623157E308" spacing="8.0">
                            <children>
                                <Button fx:id="deleteBtn" mnemonicParsing="false"
                                        onAction="#deleteExerciseButtonClicked" prefHeight="24.0" prefWidth="24.0"
                                        styleClass="deleteBtn">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="editBtn" mnemonicParsing="false" onAction="#editExerciseButtonClicked"
                                        prefHeight="24.0" prefWidth="24.0" styleClass="editBtn">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="addBtn" mnemonicParsing="false" onAction="#newExerciseButtonClicked"
                                        prefHeight="24.0" prefWidth="24.0" styleClass="addBtn">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </VBox.margin>
                        </HBox>
                        <CheckBox fx:id="customExercisesCheckbox" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#filterCheckboxes"
                                  text="Eigene Übungen">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </VBox.margin>
                        </CheckBox>
                        <CheckBox fx:id="defaultExercisesCheckbox" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#filterCheckboxes"
                                  text="Vorgegebene Übungen">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </VBox.margin>
                        </CheckBox>
                    </children>
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                </VBox>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <children>
                        <Separator orientation="VERTICAL">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Separator>
                    </children>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="exerciseNameLabel" maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308" text="Übung">
                            <font>
                                <Font size="36.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </VBox.margin>
                        </Label>
                        <HBox VBox.vgrow="ALWAYS">
                            <children>
                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                      HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                            <children>
                                                <TextArea fx:id="descriptionTextArea" editable="false"
                                                          maxHeight="1.7976931348623157E308"
                                                          maxWidth="1.7976931348623157E308" styleClass="descriptionArea"
                                                          text="Textuelle Beschreibung." wrapText="true"
                                                          HBox.hgrow="ALWAYS">
                                                    <font>
                                                        <Font size="18.0"/>
                                                    </font>
                                                </TextArea>
                                            </children>
                                            <VBox.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                            </VBox.margin>
                                        </HBox>
                                        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                                            <children>
                                                <Label alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                                                       maxWidth="1.7976931348623157E308" text="Kategorien"
                                                       VBox.vgrow="ALWAYS">
                                                    <font>
                                                        <Font size="24.0"/>
                                                    </font>
                                                    <VBox.margin>
                                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                                    </VBox.margin>
                                                </Label>
                                                <HBox maxHeight="1.7976931348623157E308"
                                                      maxWidth="1.7976931348623157E308">
                                                    <children>
                                                        <VBox maxHeight="1.7976931348623157E308"
                                                              maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label maxHeight="1.7976931348623157E308"
                                                                       maxWidth="1.7976931348623157E308"
                                                                       styleClass="categoryHeader" text="Art">
                                                                    <font>
                                                                        <Font size="16.0"/>
                                                                    </font>
                                                                    <HBox.margin>
                                                                        <Insets/>
                                                                    </HBox.margin>
                                                                </Label>
                                                                <VBox fx:id="vboxType"
                                                                      maxHeight="1.7976931348623157E308"
                                                                      maxWidth="1.7976931348623157E308" spacing="8.0"/>
                                                            </children>
                                                        </VBox>
                                                        <VBox maxHeight="1.7976931348623157E308"
                                                              maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label maxHeight="1.7976931348623157E308"
                                                                       maxWidth="1.7976931348623157E308"
                                                                       styleClass="categoryHeader" text="Geräte">
                                                                    <font>
                                                                        <Font size="16.0"/>
                                                                    </font>
                                                                    <HBox.margin>
                                                                        <Insets/>
                                                                    </HBox.margin>
                                                                </Label>
                                                                <VBox fx:id="vboxEquipment"
                                                                      maxHeight="1.7976931348623157E308"
                                                                      maxWidth="1.7976931348623157E308" spacing="8.0"/>
                                                            </children>
                                                        </VBox>
                                                        <VBox maxHeight="1.7976931348623157E308"
                                                              maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                                                            <children>
                                                                <Label maxHeight="1.7976931348623157E308"
                                                                       maxWidth="1.7976931348623157E308"
                                                                       styleClass="categoryHeader" text="Muskelgruppe">
                                                                    <font>
                                                                        <Font size="16.0"/>
                                                                    </font>
                                                                    <HBox.margin>
                                                                        <Insets/>
                                                                    </HBox.margin>
                                                                </Label>
                                                                <VBox fx:id="vboxMuscle"
                                                                      maxHeight="1.7976931348623157E308"
                                                                      maxWidth="1.7976931348623157E308" spacing="8.0"/>
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                                    </VBox.margin>
                                                </HBox>
                                            </children>
                                            <VBox.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                            </VBox.margin>
                                        </VBox>
                                    </children>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </VBox>
                                <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                                    <children>
                                        <HBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308"
                                              maxWidth="1.7976931348623157E308">
                                            <children>
                                                <VBox alignment="CENTER" maxHeight="1.7976931348623157E308"
                                                      maxWidth="1.7976931348623157E308">
                                                    <children>
                                                        <ImageView fx:id="leftArrow" fitHeight="32.0" fitWidth="32.0"
                                                                   opacity="0.5" pickOnBounds="true"
                                                                   preserveRatio="true" styleClass="back">
                                                            <image>
                                                                <Image url="@../../icons/back.png"/>
                                                            </image>
                                                            <VBox.margin>
                                                                <Insets/>
                                                            </VBox.margin>
                                                        </ImageView>
                                                    </children>
                                                </VBox>
                                                <VBox alignment="CENTER" maxHeight="1.7976931348623157E308"
                                                      maxWidth="1.7976931348623157E308">
                                                    <children>
                                                        <ImageView fx:id="imageView" fitHeight="221.0" fitWidth="281.0"
                                                                   pickOnBounds="true" preserveRatio="true"
                                                                   styleClass="imageView"/>
                                                    </children>
                                                </VBox>
                                                <VBox alignment="CENTER">
                                                    <children>
                                                        <ImageView fx:id="rightArrow" fitHeight="32.0" fitWidth="32.0"
                                                                   opacity="0.5" pickOnBounds="true"
                                                                   preserveRatio="true" styleClass="forward">
                                                            <image>
                                                                <Image url="@../../icons/forward.png"/>
                                                            </image>
                                                            <VBox.margin>
                                                                <Insets/>
                                                            </VBox.margin>
                                                        </ImageView>
                                                    </children>
                                                </VBox>
                                            </children>
                                            <VBox.margin>
                                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                                            </VBox.margin>
                                        </HBox>
                                        <VBox alignment="TOP_CENTER" fillWidth="false"
                                              maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                              VBox.vgrow="ALWAYS">
                                            <children>
                                                <Button fx:id="playVideoBtn" maxHeight="1.7976931348623157E308"
                                                        maxWidth="1.7976931348623157E308" minWidth="-Infinity"
                                                        mnemonicParsing="false" onAction="#showVideo" text="zum Video">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Button>
                                            </children>
                                        </VBox>
                                    </children>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </VBox>
                            </children>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </HBox>
                    </children>
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </HBox.margin>
                </VBox>
            </children>
        </HBox>
    </center>
    <top>
        <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="173.0" layoutY="121.0" text="Übungen">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </BorderPane.margin>
        </HBox>
    </top>
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#getBackButtonClicked" text="Zurück">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <HBox.margin>
                        <Insets bottom="10.0" left="20.0" top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
