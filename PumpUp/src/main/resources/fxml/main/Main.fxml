    <bottom>
        <HBox prefHeight="64.0" prefWidth="1299.0" styleClass="footer" BorderPane.alignment="CENTER">
            <children>
                <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <children>
                        <Button contentDisplay="LEFT" maxHeight="128.0" maxWidth="1.7976931348623157E308" minHeight="128.0" mnemonicParsing="false" onAction="#trainingClicked" prefHeight="128.0" prefWidth="300.0" styleClass="trainingBtn" text="zum Training">
                            <font>
                                <Font size="24.0" />
                            </font>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </Button>
                    </children>
                    <HBox.margin>
                        <Insets left="600.0" />
                    </HBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
